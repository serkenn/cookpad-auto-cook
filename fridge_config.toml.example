# 冷蔵庫スマート献立 設定ファイル
# このファイルを fridge_config.toml にコピーして編集してください

[camera]
indices = [0, 1]           # USBカメラのインデックス
save_dir = "/tmp/fridge"   # 画像保存先

[vision]
backend = "claude"         # "claude" | "gemini" | "ai_hat"
min_confidence = 0.5       # 食材検出の最低信頼度

[vision.claude]
api_key = ""               # 空の場合は ANTHROPIC_API_KEY 環境変数を使用
model = "claude-sonnet-4-5-20250929"

[vision.gemini]
api_key = ""               # 空の場合は GEMINI_API_KEY 環境変数を使用
model = "gemini-2.0-flash"

[vision.ai_hat]
model_path = "/usr/share/hailo-models/yolov8s.hef"

[planner]
meals_per_day = 3          # 1日の食事数 (1〜3)
recipes_per_meal = 3       # 1食あたりのレシピ数 (主菜1 + 副菜)

# カテゴリ別の保管場所 (カスタマイズ可能)
# [planner.storage_locations]
# 野菜 = "野菜室"
# 果物 = "野菜室"
# 肉 = "チルド室"
# 魚 = "チルド室"
# 乳製品 = "チルド室"
# 卵 = "ドアポケット"
# 調味料 = "ドアポケット"

[cookpad]
# token = "..."            # Cookpad APIトークン (オプショナル)
country = "JP"
language = "ja"

[printer]
enabled = false            # true にすると plan 時に自動印刷
printer_name = ""          # 空の場合はデフォルトプリンタを使用

[gdrive]
enabled = false            # true にすると plan 時に自動アップロード
credentials_path = "~/.config/cookpad/gdrive_credentials.json"
token_path = "~/.config/cookpad/gdrive_token.json"
folder_id = ""             # アップロード先フォルダID (空の場合はマイドライブ直下)

[iaeon]
enabled = false            # true にすると iAEON連携を有効化
phone = ""                 # 空の場合は IAEON_PHONE 環境変数を使用
password = ""              # 空の場合は IAEON_PASSWORD 環境変数を使用
otp_method = "manual"      # "manual" (手動入力) | "bypass" (自動取得)
fetch_schedule = "0 8 * * *"   # レシート取得スケジュール (cron式)
plan_schedule = "0 6 * * *"    # 献立生成スケジュール (cron式)
receipt_days = 7           # 取得するレシートの日数

[database]
path = "~/.config/cookpad/inventory.db"

[nutrition]
enabled = true             # 栄養バランス計算を有効化
energy_target = 2000       # 目標エネルギー (kcal)
protein_pct = 15           # たんぱく質 目標比率 (%)
fat_pct = 25               # 脂質 目標比率 (%)
carb_pct = 60              # 炭水化物 目標比率 (%)
salt_max = 7.5             # 食塩相当量 上限 (g)
fiber_min = 21             # 食物繊維 最低摂取量 (g)
prioritize_expiring = true # 期限切れ間近の食品を優先
